<div class="container" style="max-width: 100vw !important;">
	<div class="d-block">
		<div style="margin-top: 1px">
			<input type="text" class="col-md-2" placeholder="resources" @bind=Resources />
			<button class="btn btn-primary" @onclick=List><span class="oi oi-list"></span></button>
			<button class="btn btn-success" @onclick=Add><span class="oi oi-plus"></span></button>
			<button class="btn btn-danger" @onclick=RemoveAll><span class="oi oi-delete"></span></button>
			<button class="btn btn-warning" @onclick=Download><span class="oi oi-data-transfer-download"></span></button>
		</div>
		<hr />
	</div>
	
	@foreach (var candidato in Repositorio.Enquete.Candidatos)
	{
		<CandidatoView @key=candidato.Id Candidato=candidato OnRemove=CandidatoView_DoRemove />
	}
</div>
